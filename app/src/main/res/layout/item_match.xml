<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/itemMatch_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

            <TextView
                    android:id="@+id/itemMatch_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Date"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/itemMatch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemMatch_date"
                tools:text="00:00" />

            <TextView
                    android:id="@+id/itemMatch_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vs"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/itemMatch_time"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/itemMatch_homeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/itemMatch_vs"
                    app:layout_constraintTop_toTopOf="@id/itemMatch_vs"
                    app:layout_constraintBottom_toBottomOf="@id/itemMatch_vs"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>

            <TextView
                    android:id="@+id/itemMatch_homeTeam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Home Team"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/itemMatch_homeScore"
                    app:layout_constraintTop_toTopOf="@id/itemMatch_homeScore"
                    app:layout_constraintBottom_toBottomOf="@id/itemMatch_homeScore"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

            <TextView
                    android:id="@+id/itemMatch_awayScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/itemMatch_vs"
                    app:layout_constraintTop_toTopOf="@id/itemMatch_vs"
                    app:layout_constraintBottom_toBottomOf="@id/itemMatch_vs"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>

            <TextView
                    android:id="@+id/itemMatch_awayTeam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Away Team"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/itemMatch_awayScore"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/itemMatch_awayScore"
                    app:layout_constraintBottom_toBottomOf="@id/itemMatch_awayScore"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>